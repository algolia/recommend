{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "module": "es2015",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ESNEXT",
    "declaration": true
  },
  "exclude": [
    "**/__fixtures__/**/*",
    "**/__mocks__/**/*",
    "**/__tests__/**/*",
    "**/dist",
    "**/node_modules",
    "examples"
  ]
}
